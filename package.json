{
  "name": "scryptsy",
  "version": "1.1.0",
  "description": "Pure JavaScript implementation of the scrypt key deriviation function that is fully compatible with Node.js and the browser.",
  "main": "lib/scrypt.js",
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "mocha": "^1.20.1",
    "mochify": "^0.4.2",
    "crypto-browserify": "^2.1.8",
    "istanbul": "^0.2.11",
    "coveralls": "^2.10.0"
  },
  "dependencies": {
    "pbkdf2-sha256": "^1.0.1"
  },
  "repository": {
    "url": "git@github.com:cryptocoinjs/scryptsy.git",
    "type": "git"
  },
  "keywords": [
    "crytpo",
    "cryptography",
    "scrypt",
    "kdf",
    "litecoin",
    "dogecoin",
    "bitcoin",
    "bip38"
  ],
  "browser": {
    "crypto": "crypto-browserify"
  },
  "scripts": {
    "test": "mocha --ui bdd",
    "unit": "./node_modules/.bin/mocha",
    "coverage": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --reporter list test/*.js",
    "coveralls": "npm run-script coverage && node ./node_modules/.bin/coveralls < coverage/lcov.info",
    "browser-test": "./node_modules/.bin/mochify --wd -R spec"
  }
}
